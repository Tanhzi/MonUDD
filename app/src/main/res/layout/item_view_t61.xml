<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/item_produc_imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/item_styleid_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Styleid"
        android:layout_margin="10dp"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/item_brand_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="brand"
        android:layout_margin="10dp"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/item_price_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="price"
        android:layout_margin="10dp"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/item_additionalInfo_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="additionalInfo"
        android:layout_margin="10dp"
        android:textSize="15dp"/>

</LinearLayout>